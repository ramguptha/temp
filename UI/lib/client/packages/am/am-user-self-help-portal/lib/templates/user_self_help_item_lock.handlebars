<div class="modal-section-wrapper modal-commands-properties-container">
  <div class="commands-info">
    {{#if actionDescription}}
      <p>{{actionDescription}}</p>
    {{/if}}
    {{#if actionWarning}}
      <p> <span class="alert alert-warning">{{actionWarning}}</span></p>
    {{/if}}
  </div>

  {{#unless loadInProgress}}

    {{#if promptForPasscode}}
      <div class="properties-label properties-label-wide">
        {{#if isComputer}}
          <label>{{t 'amUserSelfServicePortal.modals.deviceLock.enterNewPasscodeComputer'}}</label>
        {{else}}
          <label>{{t 'amUserSelfServicePortal.modals.deviceLock.enterNewPasscodeMobile'}}</label>
        {{/if}}
      </div>

      <div class="properties-value properties-value-narrow">
        <div class="inline-flex-row">
          {{input type="text"
          id="newPasscode"
          type="password"
          value=passcode}}

          {{#if passcodeErrorMessage}}
            <div class="is-container-for-passphrase-error-message required-field-message error">{{passcodeErrorMessage}}</div>
          {{/if}}
        </div>
      </div>

      <div class="properties-label properties-label-wide">
        {{#if isComputer}}
          <label>{{t 'amUserSelfServicePortal.modals.deviceLock.typePasscodeAgainComputer'}}</label>
        {{else}}
          <label>{{t 'amUserSelfServicePortal.modals.deviceLock.typePasscodeAgainMobile'}}</label>
        {{/if}}
      </div>
      <div class="properties-value properties-value-narrow">
        <div>{{input type="text"
        id="reTypePasscode"
        type="password"
        value=verifyPasscode}}</div>
      </div>
    {{/if}}

    {{#if isIOsDevice}}
      <div class="properties-label properties-label-wide">
        <label>{{t 'amUserSelfServicePortal.modals.deviceLock.enterMessage'}}</label>
      </div>
      <div class="properties-value properties-value-narrow">
        <div>{{textarea id="enterMessage" rows="3" value=message}}</div>
      </div>

      <div class="properties-label properties-label-wide">
        <label>{{t 'amUserSelfServicePortal.modals.deviceLock.enterPhoneNumber'}}</label>
      </div>
      <div class="properties-value properties-value-narrow">
        <div>{{input type="text" id="enterPhoneNumber" value=phoneNumberIos}}</div>
      </div>
    {{/if}}

  {{else}}
    <span class="spinner spinner-medium float-left"></span>
  {{/unless}}
</div>

<div class="modal-action-buttons">
  <div class="button-group" >
    <button class="btn btn-low" {{action "cancel"}}>{{t 'shared.buttons.cancel'}}</button>
    <button class="btn btn-action" {{action "onConfirmAction"}} disabled={{isActionBtnDisabled}}>{{actionButtonLabel}}</button>
  </div>
</div>

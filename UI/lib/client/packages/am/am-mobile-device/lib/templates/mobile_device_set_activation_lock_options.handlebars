<div class="modal-action-icon" >
  <span class={{headingIconClass}}></span>
</div>
<div class="modal-action-content">
  <div class="modal-action-confirmation">
    <h3>{{heading}}</h3>
    <p>
      <b>{{confirmPrompt}}</b>
    </p>
    
    <p>
      {{actionDescription0}} <br/>
      {{actionDescription1}} <br/> <br/>
      {{actionDescription2}} <br/>
      <b><span class="alert alert-warning">{{actionWarning}}</span></b>
    </p>
  </div>

  {{#if unsupportedDevices}}
    <div class="unsupported-attention-message"><span class="icon-triangle-attention"></span>{{unsupportedDevicesMessage}}</div>
    {{view unsupportedDeviceListController.SummaryListView context=unsupportedDeviceListController controller=unsupportedDeviceListController}}
  {{/if}}

  <div class="container-fluid modal-action-buttons">
    <div class="button-group" >
        <button class="btn btn-low" {{action "cancel"}}>{{t 'shared.buttons.cancel'}}</button>
        <button class="btn btn-action" {{action "allowActivation" }} >{{t 'amMobileDevice.modals.setActivationLock.buttons.allowActivation'}}</button>
        <button class="btn btn-action" {{action "disallowActivation" }} >{{t 'amMobileDevice.modals.setActivationLock.buttons.disallowActivation'}}</button>
   </div>
     
  </div>
</div>

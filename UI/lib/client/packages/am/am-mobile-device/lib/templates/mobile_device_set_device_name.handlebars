<div class="modal-section-wrapper modal-commands-properties-container">
  <div class="commands-info">
    {{#if deviceCountDetails}}
      {{#if (compare deviceCountDetails 1 ">")}}<p><b>{{t 'amMobileDevice.shared.devicesSelected' deviceCountDetails=deviceCountDetails}}</b></p>{{/if}}
    {{/if}}
  </div>

  <div class="properties-label properties-label-narrow">
    <label>{{t 'amMobileDevice.modals.setDeviceName.newName'}}</label>
  </div>

  <div class="properties-value">
    <div class="inline-flex-row">
      {{input type="text"
      id="devname"
      placeholder="device name"
      class="folder-name-field"
      value=deviceName}}

      {{#if errorMessage}}
        <div class="required-field-message error">{{errorMessage}}</div>
      {{/if}}
    </div>
  </div>

  {{#if unsupportedDevices}}
    <div class="commands-unsupported-info"><span class="icon-triangle-attention"></span>{{unsupportedDevicesMessage}}</div>

    {{view unsupportedDeviceListController.SummaryListView context=unsupportedDeviceListController controller=unsupportedDeviceListController}}
  {{/if}}
</div>

<div class="modal-action-buttons">
  <div class="button-group" >
    <button class="btn btn-low" {{action "cancel"}}>{{t 'shared.buttons.cancel'}}</button>
    <button class="btn btn-action" {{action "onConfirmAction"}} disabled={{isActionBtnDisabled}}>{{t 'amMobileDevice.modals.setDeviceName.buttons.actionButtonLabel'}}</button>
  </div>
</div>
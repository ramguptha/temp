<div class="modal-section-wrapper">
  <div class="assignment-type">
    <label>{{t 'amMobilePolicies.shared.assignmentRuleLabel'}}</label>
    <div class="help-wrapper">
      <div class="help-container"><span class="icon-question-mark"></span><span class="help-tooltip"><div class="tooltip-arrow large-tooltip"></div>
            <ul>
              <li>{{t 'amMobilePolicies.shared.assignmentRuleLabelProfileAutoInstallTooltip'}}</li>
              <li>{{t 'amMobilePolicies.shared.assignmentRuleLabeProfilelOnDemandTooltip'}}</li>
              <li>{{t 'amMobilePolicies.shared.assignmentRuleLabelProfileAutoInstallAutoRemoveTooltip'}}</li>
              <li>{{t 'amMobilePolicies.shared.assignmentRuleLabelProfileOnDemandAutoRemoveTooltip'}}</li>
              <li>{{t 'amMobilePolicies.shared.assignmentRuleLabelProfileForbiddenTooltip'}}</li>
            </ul>
            </span>
      </div>
    </div>

    {{select-field content=assignmentTypes optionValuePath="content.type" optionLabelPath="content.name"
    value=selectedAssignmentType.value}}
  </div>
  <div class="availability-time-box">
    <label class="for-checkbox">{{input type="checkbox" checked=showAvailabilityTime}}
      {{t 'amMobilePolicies.shared.setAvailabilityTimeLabel'}}</label>

    {{availability-time
    isVisible=showAvailabilityTime
    availabilitySelector=availabilitySelector
    isDateTimeValid=isAvailabilityTimeValid
    dateTimeChanged=availabilityTimeChanged
    assignedTime=assignedTime
    formattedTime=formattedTime}}

  </div>
</div>

<div class="modal-action-buttons">
  <div class="button-group" >
    <button class="btn btn-low" {{action "cancel"}}>{{t 'shared.buttons.cancel'}}</button>
    <button class="btn btn-action" {{action "save"}} disabled={{isActionBtnDisabled}}>{{actionButtonLabel}}</button>
  </div>
</div>
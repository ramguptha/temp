<div class="logo-container"><img src={{localeConfig.logoPath}} width="216"></div>
<div id="LoginContainer" class="login-container">
  <h2 class="portal-title">{{translations.userLogin.portalHeading}}</h2>

  <div class="feedback-container">
    {{#if errorMessage}}
    <div class="error-message invalid-auth">
      <span class="icon-triangle-attention"></span>{{errorMessage}}
    </div>
    {{/if}}
    <div style="display:none">{{#if successMessage}}<div class="alert success-message">{{successMessage}}</div>{{/if}}</div>

    <div class="error-message locked-account" style="display: none; ">
      <span class="icon-octagon-attention"></span>
      <h4>{{translations.userLogin.accountLockedTitle}}</h4>
      {{translations.userLogin.accountLockedDescription}}
    </div>
  </div>
  <form class="login-form">
    <h2 class="login-title">{{translations.userLogin.heading}}</h2>
    <div class="form-control">
      <label class="form-label label-port-name" for="Locale">{{translations.userLogin.localeField.label}}</label>
      {{view Em.Select class="input-locale" placeholder=translations.userLogin.localeField.placeholder id="Locale" value=localeName content=availableLocales optionValuePath="content.name" optionLabelPath="content.label"}}

      {{#if isDisplayServerNameAndPort}}
        <label class="form-label label-port-name" for="Port">{{translations.userLogin.portField.label}}</label>
        {{input class="input-port-name" placeholder=translations.userLogin.portField.placeholder id="PortName" value=serverPort}}

        <label class="form-label label-server-name" for="ServerName">{{translations.userLogin.serverField.label}}</label>
        {{input class="input-server-name" placeholder=translations.userLogin.serverField.placeholder id="ServerName" value=serverName}}
      {{/if}}

      <label class="form-label label-username" for="Username">{{translations.userLogin.usernameField.label}}</label>
      {{input class="input-username" placeholder=translations.userLogin.usernameField.placeholder id="Username" value=username}}

      <label class="form-label label-password" for="Password">{{translations.userLogin.passwordField.label}}</label>
      {{input class="input-password" placeholder=translations.userLogin.passwordField.placeholder id="Password" value=password type="password"}}

      <label class="form-label label-server-name" for="DomainName">{{translations.userLogin.domainField.label}}</label>
      {{input class="input-domain-name" placeholder=translations.userLogin.domainField.placeholder id="DomainName" value=domainName}}
    </div>
    <div class="remember-username"><label>{{input type="checkbox" class="checkbox" checked=rememberMe}} {{translations.userLogin.checkboxRememberMe}}</label></div>
    <div class="button-group"><button class="btn-login" {{action "login"}} disabled={{isLoginDisabled}}>{{translations.userLogin.buttonLogIn}}</button><span class="spinner-login"></span></div>
    <div class="forgot-password"><a href="#" class="forgot-password-link" {{action "forgotPassword"}}>{{translations.userLogin.links.forgotYourPassword}}</a></div>
  </form>
</div>
<div class="footer-content">
  <span><a href="http://www.absolute.com/en/about/legal/agreements/" target="_blank">{{translations.userLogin.links.serviceAgreement}}</a></span>
  <span><a href="http://www.absolute.com/en/company/legal/policy" target="_blank">{{translations.userLogin.links.privacyPolicy}}</a></span>
</div>

<div class="modal-section-wrapper modal-commands-properties-container">
  <div class="commands-info">
    {{#if deviceCountDetails}}
      {{#if (compare deviceCountDetails 1 ">")}}<p><b>{{t 'amComputer.shared.computersSelected' deviceCountDetails=deviceCountDetails}}</b></p>{{/if}}
    {{/if}}

    {{#if actionDescription}}
      <p> {{actionDescription}} </p>
    {{/if}}

    {{#if actionWarning}}
      <p> <span class="alert alert-warning">{{actionWarning}}</span></p>
    {{/if}}
  </div>

  <div class="commands-input-list">
    <label class="for-checkbox">{{input type="checkbox" checked=forceFullInventoryEnabled}} {{t 'amComputer.modals.gatherInventory.forceFullInventoryCheckbox'}}</label>
    <label class="for-checkbox">{{input type="checkbox" checked=includeFontInformationEnabled}} {{t 'amComputer.modals.gatherInventory.includeFontInformationCheckbox'}}</label>
    <label class="for-checkbox">{{input type="checkbox" checked=includePrinterInformationEnabled}} {{t 'amComputer.modals.gatherInventory.includePrinterInformationCheckbox'}}</label>

    {{#if macDeviceCount}}
      <label class="for-checkbox">{{input type="checkbox" checked=includeStratupItemInformationEnabled}} {{startupItemInformationCheckboxLabel}}</label>
    {{/if}}

    {{#if winDeviceCount}}
      <label class="for-checkbox">{{input type="checkbox" checked=includeServiceInformationEnabled}} {{serviceInformationCheckboxLabel}}</label>
    {{/if}}
  </div>
  {{#if unsupportedComputers}}
    <div class="commands-unsupported-info"><span class="icon-triangle-attention"></span>{{unsupportedComputersMessage}}</div>
    {{view unsupportedComputerListController.SummaryListView context=unsupportedComputerListController controller=unsupportedComputerListController}}
  {{/if}}
</div>

<div class="modal-action-buttons">
  <div class="button-group" >
    <button class="btn btn-low" {{action "cancel"}}>{{t 'shared.buttons.cancel'}}</button>
    <button class="btn btn-action" {{action "onConfirmAction"}} disabled={{isActionBtnDisabled}}>{{actionButtonLabel}}</button>
  </div>
</div>

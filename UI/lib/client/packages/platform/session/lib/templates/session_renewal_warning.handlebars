<div class="modal-action-icon"><span class="icon-square-attention1"></span></div>

<div class="modal-action-content {{if succeeded 'is-succeeded' 'is-retrying'}}">
  {{#unless succeeded}}
    <div class="modal-action-confirmation">
      <h3>{{t 'session.renewalWarning.failedHeader'}}</h3>

      <p>{{t 'session.renewalWarning.failedDescription'}}</p>

      <p class="expiration-countdown">{{t 'session.expirationCountdown' numberOfSeconds=secsToExpiry}}</p>
    </div>
  {{else}}
    <div class="modal-action-confirmation">
      <h3>{{t 'session.renewalWarning.succeededHeader'}}</h3>

      <p>{{t 'session.renewalWarning.succeededDescription'}}</p>
    </div>

    <div class="container-fluid modal-action-buttons">
      <div class="button-group">
        <button class="btn btn-action is-close-button" {{action 'closeModal'}}>{{t 'shared.buttons.ok'}}</button>
      </div>
    </div>
  {{/unless}}
</div>

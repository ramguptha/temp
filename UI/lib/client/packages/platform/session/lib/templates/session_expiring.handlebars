<div class="modal-action-icon"><span class="icon-square-attention1"></span></div>

<div class="modal-action-content">
  <div class="modal-action-confirmation">
    <h3>{{t 'session.timeoutWarning.header'}}</h3>

    <p>{{t 'session.timeoutWarning.description'}}</p>

    <p class="expiration-countdown">{{t 'session.expirationCountdown' numberOfSeconds=secsToExpiry}}</p>
  </div>

  <div class="container-fluid modal-action-buttons">
    <div class="button-group">
      <button class="btn btn-action is-renew-button" {{action 'refreshSession'}}>{{t 'session.timeoutWarning.renewButton'}}</button>
    </div>
  </div>
</div>
